<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GPSTracking" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appcolor3</item>
        <item name="colorPrimaryVariant">@color/appcolor2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style parent="ThemeOverlay.MaterialComponents.Dialog.Alert" name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style parent="Widget.MaterialComponents.Button.TextButton.Dialog" name="NegativeButtonStyle">
        <item name="android:textColor">@color/appcolor4</item>
    </style>
    <style parent="Widget.MaterialComponents.Button.TextButton.Dialog" name="PositiveButtonStyle">
        <item name="android:textColor">@color/appcolor4</item>
    </style>

</resources>